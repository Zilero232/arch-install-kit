 ***********************************************/

configuration {
    // Available modes
    modi: "run,drun,window";
    
    // Font settings
    font: "JetBrainsMono Nerd Font 18";
    
    // Icon settings
    show-icons: true;
    icon-theme: "Papirus-Dark";
    
    // Basic settings
    terminal: "alacritty";
    drun-display-format: "{icon} {name}";
    location: 0;                              // Center position
    disable-history: false;
    hide-scrollbar: false;
    
    // Mode display names with Nerd Font icons
    display-drun: " Apps";                    // Apps mode
    display-run: " Run";                      // Run mode
    display-window: " Window";                // Window switcher
    display-Network: " з░це Network";            // Network mode
    
    // Enable sidebar mode for switching modes
    sidebar-mode: true;
}

/* Color scheme */
* {
    bg: #1e1e2eee;            // Main background with transparency
    bg-alt: #313244;          // Alternative background for elements
    bg-selected: #cba6f7;     // Selected item background
    
    fg: #cdd6f4;              // Main text color
    fg-alt: #7f849c;          // Alternative text color
    fg-selected: #1e1e2e;     // Selected item text color
    
    // Reset all styles
    border: 0;
    margin: 0;
    padding: 0;
    spacing: 0;
}

/* Window style */
window {
    fullscreen: true;
    transparency: "real";
    background-color: @bg;
    padding: 90px 150px;
}

/* Main container */
mainbox {
    padding: 20px;
    background-color: transparent;
}

/* Search bar */
inputbar {
    background-color: @bg-alt;
    padding: 12px;
    margin: 0px 0px 20px 0px;
    border-radius: 8px;
    font: "JetBrainsMono Nerd Font 20";
    children: [prompt, entry];
}

/* Search input field */
entry {
    background-color: transparent;
    text-color: @fg;
    placeholder-color: @fg-alt;
    placeholder: "Type to search...";
    padding: 4px;
}

/* Prompt before search input */
prompt {
    background-color: transparent;
    text-color: @fg;
    padding: 4px;
    margin: 0px 8px 0px 0px;
}

/* Grid of items */
listview {
    lines: 6;                 // Number of rows
    columns: 5;               // Number of columns
    spacing: 20px;            // Space between items
    fixed-columns: true;
    background-color: transparent;
}

/* Individual item style */
element {
    orientation: vertical;     // Icon above text
    padding: 20px 10px;
    border-radius: 8px;
    background-color: transparent;
}

/* Normal item */
element normal.normal {
    background-color: transparent;
    text-color: @fg;
}

/* Alternate item (every second) */
element alternate.normal {
    background-color: transparent;
    text-color: @fg;
}

/* Selected item */
element selected.normal {
    background-color: @bg-selected;
    text-color: @fg-selected;
}

/* Application icon */
element-icon {
    size: 64px;              // Icon size
    horizontal-align: 0.5;    // Center horizontally
    background-color: transparent;
}

/* Application name */
element-text {
    horizontal-align: 0.5;    // Center horizontally
    vertical-align: 0.5;      // Center vertically
    background-color: transparent;
    text-color: inherit;
    margin: 8px 0px 0px 0px;  // Space between icon and text
}

/* Mode switcher at the bottom */
mode-switcher {
    spacing: 20px;
    background-color: transparent;
    margin: 20px 0px 0px 0px;
}

/* Mode switcher buttons */
button {
    padding: 8px 16px;
    border-radius: 8px;
    background-color: @bg-alt;
    text-color: @fg;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}

/* Selected mode button */
button selected {
    background-color: @bg-selected;
    text-color: @fg-selected;
}

/* Scrollbar styling */
scrollbar {
    width: 4px;              // Bar width
    border: 0;
    handle-width: 8px;
    padding: 0;
    handle-color: @bg-selected;
    background-color: @bg-alt;
    margin: 0px 0px 0px 10px;
}