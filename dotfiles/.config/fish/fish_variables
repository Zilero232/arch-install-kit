# Файл с универсальными переменными fish
# VERSION: 3.0

# Версия инициализации fish
SETUVAR __fish_initialized:3400

# --- ЦВЕТОВЫЕ СХЕМЫ ---

# Цвет автодополнения (серый)
SETUVAR fish_color_autosuggestion:brblack

# Цвет при отмене операции
SETUVAR fish_color_cancel:\x2d\x2dr

# Цвет команд (яркий синий)
SETUVAR fish_color_command:brblue

# Цвет комментариев (яркий пурпурный)
SETUVAR fish_color_comment:brmagenta

# Цвет текущей директории (яркий зеленый)
SETUVAR fish_color_cwd:brgreen

# Цвет директории для root (яркий красный)
SETUVAR fish_color_cwd_root:brred

# Цвет окончания команды (яркий белый)
SETUVAR fish_color_end:brwhite

# Цвет ошибок (яркий красный)
SETUVAR fish_color_error:brred

# Цвет экранированных символов (яркий голубой)
SETUVAR fish_color_escape:brcyan

# Цвет текущей команды в истории
SETUVAR fish_color_history_current:\x2d\x2dbold

# Цвет имени хоста
SETUVAR fish_color_host:normal

# Цвет удаленного хоста (яркий желтый)
SETUVAR fish_color_host_remote:bryellow

# Цвет обычного текста
SETUVAR fish_color_normal:normal

# Цвет операторов (голубой)
SETUVAR fish_color_operator:cyan

# Цвет параметров команд (яркий белый)
SETUVAR fish_color_param:brwhite

# Цвет кавычек (желтый)
SETUVAR fish_color_quote:yellow

# Цвет перенаправления (яркий желтый)
SETUVAR fish_color_redirection:bryellow

# Цвет совпадений при поиске (желтый текст на сером фоне)
SETUVAR fish_color_search_match:bryellow\x1e\x2d\x2dbackground\x3dbrblack

# Цвет выделенного текста
SETUVAR fish_color_selection:white\x1e\x2d\x2dbold\x1e\x2d\x2dbackground\x3dbrblack

# Цвет статуса (красный)
SETUVAR fish_color_status:red

# Цвет имени пользователя (яркий зеленый)
SETUVAR fish_color_user:brgreen

# Подчеркивание правильных путей
SETUVAR fish_color_valid_path:\x2d\x2dunderline

# --- ОСНОВНЫЕ НАСТРОЙКИ ---

# Отключаем приветственное сообщение
SETUVAR fish_greeting:\x1d

# Используем привязки клавиш в стиле vim
SETUVAR fish_key_bindings:fish_vi_key_bindings

# --- НАСТРОЙКИ ПЕЙДЖЕРА (ПОСТРАНИЧНОГО ВЫВОДА) ---

# Цвет завершения в пейджере
SETUVAR fish_pager_color_completion:normal

# Цвет описания в пейджере (желтый)
SETUVAR fish_pager_color_description:yellow

# Цвет префикса в пейджере (подчеркнутый белый)
SETUVAR fish_pager_color_prefix:white\x1e\x2d\x2dbold\x1e\x2d\x2dunderline

# Цвет индикатора прогресса
SETUVAR fish_pager_color_progress:brwhite\x1e\x2d\x2dbackground\x3dcyan

# Цвет фона выбранного элемента
SETUVAR fish_pager_color_selected_background:\x2d\x2dbackground\x3dbrblack